<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/list_item_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56.7dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/general_margin_left"
        >

        <TextView
            android:id="@+id/index_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.46"
            android:layout_gravity="center_vertical"
            style="@style/stock_item_name"/>

        <com.zlf.appmaster.ui.stock.StockTextView
            android:id="@+id/index_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:layout_gravity="center_vertical"
            style="@style/stock_item_content"/>

        <com.zlf.appmaster.ui.stock.StockTextView
            android:id="@+id/index_percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.24"
            android:layout_gravity="center_vertical"
            style="@style/stock_item_content"/>
    </LinearLayout>

    <View android:background="@color/defeat_split_line"
        android:layout_width="fill_parent"
        android:layout_height="1.0px" />

</LinearLayout>