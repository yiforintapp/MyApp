<?xml version="1.0" encoding="utf-8"?>
<com.zlf.appmaster.ui.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rippleAlpha="1"
    app:rippleColor="@color/button_gray_ripple"
    app:rippleDuration="250"
    app:rippleHover="true"
    app:rippleInAdapter="true"
    app:rippleOverlay="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/new_list_selecter"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/index_name"
            style="@style/stock_item_name"
            android:layout_marginLeft="@dimen/general_margin_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.46" />

        <com.zlf.appmaster.ui.stock.StockTextView
            android:id="@+id/index_price"
            style="@style/stock_item_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3" />

        <com.zlf.appmaster.ui.stock.StockTextView
            android:id="@+id/index_percent"
            style="@style/stock_item_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.24" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/defeat_split_line" />

</com.zlf.appmaster.ui.RippleView>