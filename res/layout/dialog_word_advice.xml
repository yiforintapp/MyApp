<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="20dp"
    android:background="@drawable/common_dialog_bg">


    <TextView
        android:id="@+id/advice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_red"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="@string/zhibo_data" />

    <ImageView
        android:id="@+id/advice_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/advice_close"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"/>


    <TextView
        android:id="@+id/advice_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/advice_title"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:text="" />


    <TextView
        android:id="@+id/advice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_red"
        android:layout_below="@+id/advice_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:text="" />


</RelativeLayout>