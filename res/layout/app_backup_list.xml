<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/app_manager_backup_list_margin_bottom">

            <ProgressBar
                android:id="@+id/pb_loading"
                style="@style/ProgressBarCricle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

            <ListView
                android:id="@+id/list_backup_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:divider="#00000000"
                android:listSelector="#00000000"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_gravity="bottom"
        android:background="@color/white">

        <TextView
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="top"
            android:background="@color/pri_pro_divider" />

        <com.leo.appmaster.ui.RippleView
            android:id="@+id/rv_button_backup"
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/green_radius_btn_shape"
            app:rippleColor="@color/button_green_ripple"
            app:rippleDuration="250"
            app:rippleHover="true"
            app:rippleOverlay="true">

            <TextView
                android:id="@+id/tv_button_backup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/green_radius_btn_shape"
                android:gravity="center"
                android:text="@string/button_backup"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </com.leo.appmaster.ui.RippleView>

        <RelativeLayout
            android:id="@+id/iv_check_backup_layout"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginLeft="@dimen/app_manager_backup_check_margin_left"
            android:layout_marginRight="26dp"
            android:src="@drawable/app_unselect">

            <ImageView
                android:id="@+id/iv_check_backup"
                android:layout_width="22dp"
                android:layout_height="22dp" />
        </RelativeLayout>
    </FrameLayout>

</FrameLayout>
