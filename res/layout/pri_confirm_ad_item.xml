<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ConfirmItem"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/preview_title_layout"
        style="@style/SecurityItemHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/item_ad_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:id="@+id/item_header_ll"
            style="@style/ItemHeader"
            android:layout_height="26dp"
            android:background="#7F000000"
            android:layout_alignBottom="@id/item_ad_preview">

            <View
                android:id="@+id/item_ad_marker"
                style="@style/ItemAdMarker" />

            <TextView
                android:id="@+id/item_title"
                style="@style/ItemAdTitle"/>
        </LinearLayout>
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/item_middle_ll"
        style="@style/SecurityItemMiddle"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_below="@id/preview_title_layout">

        <TextView
            android:id="@+id/item_summary"
            style="@style/ItemSummary"
            android:textSize="10dp"
            android:maxLines="2" />
    </LinearLayout>
    
    <View
        android:id="@+id/ad_divider"
        android:layout_below="@id/item_middle_ll"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="19dp"
        android:background="@color/c4" />
    
    <TextView
        android:id="@+id/item_btn_tv"
        style="@style/ItemBtnText"
        android:layout_height="46dp"
        android:layout_below="@id/ad_divider"
        android:drawablePadding="7dp"
        android:drawableRight="@drawable/arrow_button_right" />

</RelativeLayout>