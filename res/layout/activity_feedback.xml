<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical">

    <com.zlf.appmaster.ui.CommonToolbar
        android:id="@+id/fb_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp" />


    <EditText
        android:id="@+id/ed_fb"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_edittext"
        android:gravity="left|top"
        android:hint="@string/feedback_ed"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/login_hint"
        android:textSize="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="@string/feedback_tv"
            android:textColor="@color/black"
            android:textSize="13dp" />


        <EditText
            android:id="@+id/ed_fb_2"
            android:layout_toRightOf="@id/tv_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:hint="@string/feedback_ed_2"
            android:textColor="@color/black"
            android:textColorHint="@color/login_hint"
            android:textSize="13dp"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/feedback_tv_2"
        android:textColor="@color/login_hint"
        android:textSize="13dp"/>

    <TextView
        android:id="@+id/tv_submit"
        style="@style/fb_right_button_txt_del"
        android:layout_height="35dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp"
        android:text="@string/feedback_tv_3"
        android:textColor="@drawable/deal_text_selector" />


</LinearLayout>