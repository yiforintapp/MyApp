<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_bg"
    android:orientation="vertical">

    <com.zlf.appmaster.ui.CommonToolbar
        android:id="@+id/ab_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/about_us" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/zlf_about_us_desc"
        android:textColor="@color/text_gold"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="60dp"
            android:layout_height="1px"
            android:layout_marginRight="10dp"
            android:background="@color/login_hint" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zlf_about_us_brand"
            android:textColor="@color/login_hint"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/login_hint"
            android:textSize="14dp" />

        <View
            android:layout_width="60dp"
            android:layout_height="1px"
            android:background="@color/login_hint" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/click_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tv_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/zlf_about_us_web"
                android:textColor="@color/login_hint"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_web"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/zlf_about_us_phone"
                android:textColor="@color/login_hint"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="@string/zlf_about_us_copyright"
                android:textColor="@color/login_hint"
                android:textSize="12dp" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>