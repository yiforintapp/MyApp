<com.leo.appmaster.ui.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:rippleAlpha="1"
    app:rippleColor="@color/home_tab_pressed"
    app:rippleHover="true"
    app:rippleDuration="250"
    app:rippleInAdapter="true"
    app:rippleOverlay="false">

    <com.leo.appmaster.backup.AppBackupItemView
        android:id="@+id/content_all_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/content_all_item"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/new_list_selecter">

            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="@dimen/app_manager_lv_item_icon_width_height"
                android:layout_height="@dimen/app_manager_lv_item_icon_width_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:scaleType="centerInside" />

            <LinearLayout
                android:id="@+id/content_name_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_toRightOf="@id/app_icon"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/app_title"
                    android:layout_width="@dimen/app_manager_backup_item_text_width"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="#333333"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/app_size"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/c4"
                    android:textSize="13dp" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/content_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="26dp">

                <ImageView
                    android:id="@+id/app_check"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />

                <TextView
                    android:id="@+id/tv_app_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/flow_item_small"
                    android:textSize="14dp"
                    android:visibility="gone" />
            </FrameLayout>

            <View style="@style/priAppItem" />
        </RelativeLayout>

    </com.leo.appmaster.backup.AppBackupItemView>
</com.leo.appmaster.ui.MaterialRippleLayout>