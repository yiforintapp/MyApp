<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <View
        android:visibility="gone"
        android:id="@+id/span_view"
        android:layout_width="match_parent"
        android:layout_height="9.3dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/split_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33.3dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingLeft="11.3dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/industry_color"
            android:layout_width="10.3dp"
            android:layout_height="12dp"
            />
        <TextView
            android:id="@+id/industry_name"
            android:layout_marginLeft="6.67dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/industry_count"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#909090"/>
</LinearLayout>