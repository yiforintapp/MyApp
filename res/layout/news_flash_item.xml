<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_flash_item_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/top_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="15.3dp"
        android:visibility="gone">
        <View
            android:layout_width="0.67dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="13.7dp"
            android:background="#f1f4f4" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="0.67dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="13.7dp"
                android:background="#f1f4f4" />
            <ImageView
                android:id="@+id/pot_image"
                android:layout_width="10.7dp"
                android:layout_height="10.7dp"
                android:layout_marginLeft="8.3dp"
                android:layout_centerVertical="true"
                android:src="@drawable/news_flash_pot"/>
            <View
                android:id="@+id/middle_line"
                android:layout_width="18.3dp"
                android:layout_height="0.67dp"
                android:layout_toRightOf="@id/pot_image"
                android:layout_centerVertical="true"
                android:background="#f1f4f4" />
            <TextView
                android:id="@+id/news_time"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:textSize="10dp"
                android:textColor="#047cce"
                android:layout_toRightOf="@id/middle_line"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:background="@drawable/news_flash_time_line"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="0.67dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="13.7dp"
                android:background="#f1f4f4" />
            <TextView
                android:id="@+id/news_summary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:lineSpacingExtra="6.7dp"
                android:textColor="#333333"
                android:paddingRight="21.7dp"
                android:paddingBottom="18.3dp"
                android:paddingLeft="37.3dp"
                android:paddingTop="8.3dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>