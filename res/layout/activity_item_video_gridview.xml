<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="16dp" >

    <FrameLayout
        android:id="@+id/fralay_top"
        android:layout_width="@dimen/hide_album_frame_width"
        android:layout_height="@dimen/hide_album_frame_width"
        >

        <ImageView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/folder_video_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--android:background="@drawable/photo_bg"-->

        <ImageView

            android:id="@+id/image"
            android:layout_width="@dimen/hide_pictrue_imge_frame_width"
            android:layout_height="@dimen/hide_pictrue_imge_frame_width"
            android:layout_marginLeft="@dimen/hide_picture_image_frame_left"
            android:layout_marginTop="@dimen/hide_pictrue_image_frame_top"
            android:adjustViewBounds="true"
            android:background="@drawable/video_loading"
            android:scaleType="center" />

      <!--  <ImageView
            android:layout_width="@dimen/hide_pictrue_imge_frame_width"
            android:layout_height="@dimen/hide_pictrue_imge_frame_width"
            android:layout_marginLeft="@dimen/hide_picture_image_frame_left"
            android:layout_marginTop="@dimen/hide_pictrue_image_frame_top"
            android:adjustViewBounds="true"
            android:background="@drawable/selector_over_frame"
            android:scaleType="center" />-->

        <ImageView
            android:layout_width="@dimen/hide_album_frame_width"
            android:layout_height="@dimen/hide_album_frame_width"
            android:src="@drawable/play_icon" />

        <ImageView
            android:id="@+id/video_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/hide_video_checkbox_bottom"
            android:paddingRight="@dimen/hide_video_checkbox_right"
            android:src="@drawable/pic_choose_normal" />
    </FrameLayout>

    <TextView
        android:id="@+id/txt_item_picture"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/fralay_top"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/grey" />

</RelativeLayout>