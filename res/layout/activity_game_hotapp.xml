<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.leo.appmaster.ui.CommonTitleBar
            android:id="@+id/hotapp_title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ctc" />

        <RelativeLayout
            android:id="@+id/trffic_setting_iv"
            android:layout_width="@dimen/app_manager_flowactivity_small_icon_width_height"
            android:layout_height="@dimen/app_manager_flowactivity_small_icon_width_height"
            android:layout_alignParentRight="true"
            android:background="@drawable/traffic_small_icon_selector"
            android:visibility="gone" >

            <ImageView
                android:layout_width="@dimen/app_manager_lv_item_delete_button_w_h"
                android:layout_height="@dimen/app_manager_lv_item_delete_button_w_h"
                android:layout_centerInParent="true"
                android:background="@drawable/data_usage_settings_icon" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/home_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ctc"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_red_tip"
                android:visibility="gone"
                android:layout_width="@dimen/app_manager_hotapp_rep_tip_width_height"
                android:layout_height="@dimen/app_manager_hotapp_rep_tip_width_height"
                android:layout_marginTop="@dimen/app_manager_hotapp_rep_tip_margin"
                android:layout_marginLeft="@dimen/hot_app_tab_red_tip_margin_left"
                android:background="@drawable/red_tip" />

            <com.leo.appmaster.ui.LeoPagerTab
                android:id="@+id/hotapp_app_tab_indicator"
	            android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_manager_backup_head_back" />
        </RelativeLayout>

        <android.support.v4.view.ViewPager
	        android:overScrollMode="never"
            android:id="@+id/hotapp_app_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>