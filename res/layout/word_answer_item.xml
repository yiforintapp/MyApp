<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp">

        <com.zlf.appmaster.ui.CircleImageView
            android:id="@+id/admin_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/admin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/admin_iv"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:text="朱川"/>

        <TextView
            android:id="@+id/admin_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c4"
            android:text="11.03 16:39"
            android:textSize="13sp"
            android:layout_marginTop="3dp"
            android:layout_alignLeft="@+id/admin_name"
            android:layout_below="@+id/admin_name"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/admin_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="你好据法国减肥减肥减肥减肥减肥减肥减肥减肥给甲方法减肥减肥给甲方将房价附加费给解放军房管局高房价房管局"/>


    <RelativeLayout
        android:id="@+id/ask_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defeat_split_line"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/button_blue"
            android:text="/@小林伢"/>

        <TextView
            android:id="@+id/user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/c4"
            android:text="11.03 16:39"
            android:textSize="13sp"
            android:layout_marginLeft="15dp"
            android:layout_alignBottom="@+id/user_name"
            android:layout_toRightOf="@+id/user_name"/>

        <TextView
            android:id="@+id/user_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/c4"
            android:layout_below="@+id/user_name"
            android:layout_marginTop="8dp"
            android:text="法规尽快发给将减肥减肥让房间风格就仿佛反击房价房管局给甲方给军阀割据军阀割据房管局"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/xlistview_header_bg"/>



</LinearLayout>