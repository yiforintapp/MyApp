<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.zlf.appmaster.ui.CommonToolbar
        android:id="@+id/word_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp" />

    <com.zlf.appmaster.ui.PagerSlidingTabStrip
        android:id="@+id/word_tab_tabs"
        android:layout_below="@+id/word_toolbar"
        style="@style/sliding_tab_style" />

    <android.support.v4.view.ViewPager
        android:id="@+id/word_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/word_tab_tabs"
        android:background="@color/home_tab_pressed"
        android:overScrollMode="never" />

</RelativeLayout>