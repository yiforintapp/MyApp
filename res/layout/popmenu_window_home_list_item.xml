<?xml version="1.0" encoding="utf-8"?>
<com.leo.appmaster.ui.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:rippleAlpha="1"
    app:rippleColor="@color/home_tab_pressed"
    app:rippleDuration="250"
    app:rippleHover="true"
    app:rippleInAdapter="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/new_list_selecter"
        android:padding="10dp">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:src="@drawable/reset_pasword_icon" />


        <TextView
            android:id="@+id/menu_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/menu_icon"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:maxWidth="158dp"
            android:text="dfd"
            android:textColor="#333333"
            android:textSize="12dp" />
    </RelativeLayout>
</com.leo.appmaster.ui.MaterialRippleLayout>