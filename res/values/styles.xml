<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- define the app theme and globle animation -->
    <style name="BaseTheme" mce_bogus="1" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowAnimationStyle">@style/activity_theme_animation</item>
        <item name="android:excludeFromRecents">true</item>
    </style>

    <style name="activity_theme" parent="BaseTheme">

    </style>

    <style name="ThemeWidthActionBar" parent="android:Theme.Holo.Light.DarkActionBar">

    </style>

    <style name="activity_theme_animation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/translate_between_interface_right_in
        </item>
        <item name="android:activityOpenExitAnimation">@anim/translate_between_interface_left_out
        </item>
        <item name="android:activityCloseEnterAnimation">@anim/translate_between_interface_left_in
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/translate_between_interface_right_out
        </item>
        <item name="android:taskOpenEnterAnimation">@anim/translate_between_interface_right_in
        </item>
        <item name="android:taskOpenExitAnimation">@anim/translate_between_interface_left_out</item>
        <item name="android:taskCloseEnterAnimation">@anim/translate_between_interface_left_in
        </item>
        <item name="android:taskCloseExitAnimation">@anim/translate_between_interface_right_out
        </item>
        <item name="android:taskToFrontEnterAnimation">@anim/translate_between_interface_right_in
        </item>
        <item name="android:taskToFrontExitAnimation">@anim/translate_between_interface_left_out
        </item>
        <item name="android:taskToBackEnterAnimation">@anim/translate_between_interface_left_in
        </item>
        <item name="android:taskToBackExitAnimation">@anim/translate_between_interface_right_out
        </item>
        <item name="android:wallpaperOpenEnterAnimation">
            @anim/translate_between_interface_right_in
        </item>
        <item name="android:wallpaperOpenExitAnimation">@anim/translate_between_interface_left_out
        </item>
        <item name="android:wallpaperCloseEnterAnimation">
            @anim/translate_between_interface_left_in
        </item>
        <item name="android:wallpaperCloseExitAnimation">
            @anim/translate_between_interface_right_out
        </item>
        <item name="android:wallpaperIntraOpenEnterAnimation">
            @anim/translate_between_interface_right_in
        </item>
        <item name="android:wallpaperIntraOpenExitAnimation">
            @anim/translate_between_interface_left_out
        </item>
        <item name="android:wallpaperIntraCloseEnterAnimation">
            @anim/translate_between_interface_left_in
        </item>
        <item name="android:wallpaperIntraCloseExitAnimation">
            @anim/translate_between_interface_right_out
        </item>
    </style>





    <style name="bt_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>




    <style name="dlg_title_txt">
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginBottom">11dp</item>
    </style>



    <style name="dlg_content_txt">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginBottom">11dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:maxLines">10</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>



    <style name="dlg_left_button_txt">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/selector_dialog_white_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/c2</item>
        <item name="android:layout_height">@dimen/dialog_btn_height</item>
    </style>


    <style name="dlg_right_button_txt">
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/selector_dialog_blue_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_height">@dimen/dialog_btn_height</item>
    </style>


    <style name="theme_loading">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateDrawable">@drawable/theme_loading_drawable</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:maxHeight">48dip</item>
    </style>



    <style name="PopupListAnimUpDown">
        <item name="android:windowEnterAnimation">@anim/popumenu_translate_down</item>
        <item name="android:windowExitAnimation">@anim/popumenu_translate_up</item>
    </style>

    <style name="ButtonBar">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="WindowTitleBackground">
        <item name="android:background">@color/black</item>
        <item name="android:paddingLeft">0dip</item>
    </style>

    <style name="WindowTitle">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ProgressBar_webview" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">8dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/webview_top_progress_bar</item>
    </style>


    <style name="translucent">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/translucent_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="ToolbarIcon">
        <item name="android:layout_width">@dimen/ic_toolbar_width</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@drawable/ic_toolbar_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="home_tab_img">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="home_tab_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
